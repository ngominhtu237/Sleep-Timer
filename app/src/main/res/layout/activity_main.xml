        <TextView
            android:id="@+id/emojiTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clockSeekBarContainer"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textColor="@color/accent_white"
            android:textSize="@dimen/emoji_size" />

    <Button
        android:id="@+id/buttonStartSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_start_circle_background"
        android:foreground="@drawable/ripple_circle"
        android:text="Start now"
        android:textColor="@color/accent_white"
        android:textSize="@dimen/quote_size"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonStopSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_stop_circle_background"
        android:foreground="@drawable/ripple_circle"
        android:text="RESET"
        android:textColor="@color/accent_white"
        android:textSize="@dimen/quote_size"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />
